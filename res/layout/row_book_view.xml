<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentStart="true"
	    android:orientation="vertical" >
    
	    
	    <TextView
	        android:id="@+id/tvTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/dime"
	        android:layout_marginBottom="@dimen/nickel"
	        android:layout_marginLeft="@dimen/dime"
	        android:layout_marginStart="@dimen/dime"
	        
	        android:text="The World According to Garp" 
	        
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/tvAuthor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/dime"
	        android:layout_marginLeft="20dp"
	        android:layout_marginStart="20dp"
	
	        android:text="Joe College" 
	
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout> 
	    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentEnd="true"
	    android:layout_centerVertical="true"
	    android:gravity="right"
	    android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/tvBooksRead"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/dime"
	        android:layout_marginEnd="@dimen/dime"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:padding="@dimen/nickel"
	        android:text="Read" />
	    
	    <TextView
	        android:id="@+id/tvBooksOwn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/dime"
	        android:layout_marginEnd="@dimen/dime"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:padding="@dimen/nickel"
	        android:text="Own" />
    
	</LinearLayout>
</RelativeLayout>
